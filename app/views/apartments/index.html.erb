<p id="notice"><%= notice %></p>

<h3>Apartments</h3>

<div class="card">
    <div class="card-body">
       
        <% if flash[:set_product_error] %>
         <%= flash[:set_product_error] %>
    <% end %>

<table class='table table-hover'>
  <thead>
    <tr>
      <th>Building</th>
      <th>Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apartments.each do |apartment| %>
      <tr>
        <td><%= apartment.building.name %></td>
        <td><%= apartment.number %></td>
        <td><%= link_to 'Show', apartment, class:'btn btn-success' %></td>
        <td><%= link_to 'Edit', edit_apartment_path(apartment), class: 'btn btn-success' %></td>
        <td><%= link_to 'Destroy', apartment, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-success' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Apartment', new_apartment_path, class: 'btn btn-primary' %>
